#pragma once

#ifndef APU_H
#define APU_H

#include "xparameters.h"
#include "xintc.h"
#include "xil_io.h"

#define INTC_ID		XPAR_INTC_0_DEVICE_ID
#define APU_IN_ID	XPAR_APU_FIFO_READER_BASEADDR

// #define NES_RST_INT_ID	0
#define APU_MSG_INT_ID	0

// struct GenericBitField{
//     u32 type : 1;
// };

struct NoteBitField{
    // u32 type    : 1;
    u32 timer   : 11;
    u32 onoff   : 1;
    u32 channel : 3;
};

union APUBitField {
    u32 raw;
    // GenericBitField generic;
    NoteBitField note;
};

#define read_apu_message(union) union.raw = Xil_In32(APU_IN_ID)
#define print_note_message(union) xil_printf("Channel: %d, On/Off: %d, Timer: 0x%03x\r\n", union.note.channel, union.note.onoff, union.note.timer)

int setup_apu_interrupts(XIntc* InterruptController);
void apu_message_handler(void* CallbackRef);

#endif
